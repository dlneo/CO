= form_for @cat do |f|
  -if @cat.errors.any?
    #error_explanation
      %h2= "#{pluralize(@cat.errors.count, "error")} prohibited this cat from being saved:"
      %ul
        - @cat.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :order
    = f.number_field :order
  .field
    = f.label :about
    = f.text_area :about
  .field
    = f.label :status
    = f.text_field :status
  .actions
    = f.submit 'Save'
